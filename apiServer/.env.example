# =====================================
# JUQI API Server 环境变量配置示例
# =====================================

# 基础配置
NODE_ENV=development
PORT=9999

# 测试环境 Cloudbase 配置
TCB_ENV_TEST=test-juqi-3g1m5qa7cc2737a1
CLOUD_BASE_ID=your_test_secret_id
CLOUD_BASE_KEY=your_test_secret_key

# 生产环境 Cloudbase 配置（只读）
TCB_ENV_PROD=prod-juqi-7glu2m8qfa31e13f
CLOUD_BASE_ID_PROD_READONLY=your_prod_readonly_secret_id
CLOUD_BASE_KEY_PROD_READONLY=your_prod_readonly_secret_key

# 生产环境 Cloudbase 配置（完整权限，可选）
# CLOUD_BASE_ID_PROD=your_prod_full_secret_id
# CLOUD_BASE_KEY_PROD=your_prod_full_secret_key

# 迁移配置（true = 使用直连数据库，false = 使用云函数）
MIGRATION_USER_PROFILE=false
MIGRATION_DYN_LIST=false
MIGRATION_UNREAD_COUNT=false
MIGRATION_MESSAGE_LIST=false
MIGRATION_CHAT_LIST=false

# 全局回滚开关（true = 所有接口使用云函数）
USE_CLOUD_FUNCTION_FALLBACK=false
